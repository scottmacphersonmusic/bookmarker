%table.table.table-hover
  %tr
    %th Link
    %th Description
    -@bookmarks.each do |bookmark|
      %tr
        -unless bookmark.title == ""
          %td.btn.btn-link= link_to bookmark.title, bookmark.link
        -else
          %td.btn.btn-link= link_to bookmark.link, bookmark.link
        %td= bookmark.description
        %td.btn.btn-info.btn-sm= link_to 'Edit', edit_bookmark_path(bookmark)
        %td.btn.btn-danger.btn-sm= link_to 'Delete', bookmark_path(bookmark),        |
                                   method: :delete, data: {confirm: 'Are you sure?'} |
