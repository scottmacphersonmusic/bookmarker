<div class="container">
  <table class="table">
    <tr>
      <th>Title</th>
      <th>Link</th>
      <th>Description</th>
    </tr>
    <tr>
      <td><%= @bookmark.title %></td>
      <td><a href=<%= @bookmark.link %>><%= @bookmark.link %></a></td>
      <td><%= @bookmark.description %></td>
    </tr>
  </table>

  <%= link_to 'Edit', edit_bookmark_path(@bookmark), class: 'btn btn-info btn-sm' %>
  <%= link_to 'Back', bookmarks_path, class: 'btn btn-info btn-sm' %>
</div>
