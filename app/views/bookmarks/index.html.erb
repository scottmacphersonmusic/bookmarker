<h1>My Bookmarks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Link</th>
    <th>Description</th>
  </tr>

  <% @bookmarks.each do |bookmark| %>
    <tr>
      <td><%= bookmark.title %></td>
      <td><a href=<%= bookmark.link %>><%= bookmark.link %></a></td>
      <td><%= bookmark.description %></td>
      <td><%= link_to 'View', bookmark_path(bookmark) %></td>
      <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
      <td><%= link_to 'Delete', bookmark_path(bookmark),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Bookmark', new_bookmark_path %>
